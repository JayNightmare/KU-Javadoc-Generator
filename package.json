{
    "name": "ku-javadoc",
    "displayName": "KU Javadoc",
    "description": "java doc for Kingston University",
    "version": "0.0.8",
    "type": "module",
    "engines": {
        "vscode": "^1.106.1"
    },
    "categories": [
        "Other"
    ],
    "icon": "./src/images/public/ku-javadoc.png",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./src/extension.js",
    "author": "Jay",
    "publisher": "JayNightmare",
    "repository": {
        "type": "git",
        "repo": "https://github.com/JayNightmare/KU-Javadoc-Generator"
    },
    "license": "MIT",
    "contributes": {
        "commands": [
            {
                "command": "ku-javadoc.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "ku-javadoc.openOnboarding",
                "title": "KU Javadoc: Open Setup",
                "category": "KU-javadoc"
            },
            {
                "command": "ku-javadoc.generateFileDocs",
                "title": "Generate Javadoc for File",
                "category": "KU-javadoc",
                "icon": {
                    "dark": "./src/images/tools/doc/dark/dark-audit.png",
                    "light": "./src/images/tools/doc/light/light-audit.png"
                },
                "enablement": "!kuJavadoc.generating"
            },
            {
                "command": "ku-javadoc.generateFileDocsBusy",
                "title": "Generating Javadocâ€¦",
                "category": "KU-javadoc",
                "icon": {
                    "dark": "./src/images/tools/gen/dark/dark-writing.png",
                    "light": "./src/images/tools/gen/light/light-writing.png"
                },
                "enablement": "kuJavadoc.generating"
            },
            {
                "command": "ku-javadoc.configureSite",
                "title": "Configure Documentation Site",
                "category": "KU-javadoc"
            },
            {
                "command": "ku-javadoc.generateSite",
                "title": "Generate Documentation Site",
                "category": "KU-javadoc"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "ku-javadoc.generateFileDocs",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && !kuJavadoc.generating"
                },
                {
                    "command": "ku-javadoc.generateFileDocsBusy",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && kuJavadoc.generating"
                }
            ],
            "explorer/context": [
                {
                    "command": "ku-javadoc.generateFileDocs",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && !kuJavadoc.generating"
                },
                {
                    "command": "ku-javadoc.generateFileDocsBusy",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && kuJavadoc.generating"
                }
            ],
            "editor/title": [
                {
                    "command": "ku-javadoc.generateFileDocs",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && !kuJavadoc.generating"
                },
                {
                    "command": "ku-javadoc.generateFileDocsBusy",
                    "group": "navigation@9",
                    "when": "resourceExtname == .java && kuJavadoc.generating"
                }
            ],
            "commandPalette": [
                {
                    "command": "ku-javadoc.openOnboarding"
                },
                {
                    "command": "ku-javadoc.generateFileDocs",
                    "when": "!kuJavadoc.generating"
                },
                {
                    "command": "ku-javadoc.generateFileDocsBusy",
                    "when": "kuJavadoc.generating"
                },
                {
                    "command": "ku-javadoc.configureSite"
                },
                {
                    "command": "ku-javadoc.generateSite"
                }
            ]
        },
        "configuration": {
            "title": "KU Javadoc",
            "properties": {
                "ku-javadoc.name": {
                    "type": "string",
                    "default": "",
                    "description": "Enter your name (this will be used for the @author tag)",
                    "scope": "application"
                },
                "ku-javadoc.apiKey": {
                    "type": "string",
                    "description": "API key for the LLM used to generate documentation",
                    "scope": "application",
                    "password": true
                },
                "ku-javadoc.model": {
                    "type": "string",
                    "default": "",
                    "description": "Model name to use for documentation generation",
                    "scope": "application"
                },
                "ku-javadoc.endpoint": {
                    "type": "string",
                    "default": "https://openrouter.ai/api/v1/chat/completions",
                    "description": "OpenAI-compatible chat completions endpoint URL",
                    "scope": "application"
                }
            }
        },
        "walkthroughs": [
            {
                "id": "ku-javadoc.walkthrough",
                "title": "Get started with KU Javadoc",
                "description": "Configure your API access once and start generating documentation from any Java file.",
                "steps": [
                    {
                        "id": "ku-javadoc.walkthrough.setup",
                        "title": "Configure API access",
                        "description": "Provide your name, OpenRouter API key, endpoint, and preferred model using the guided setup. [Open setup](command:ku-javadoc.openOnboarding)",
                        "media": {
                            "image": "./src/images/public/ku-javadoc.png",
                            "altText": "KU Javadoc icon"
                        }
                    }
                ]
            }
        ],
        "viewsWelcome": [
            {
                "view": "workbench.explorer.fileView",
                "contents": "Start generating Javadoc faster by configuring KU Javadoc. [Open setup](command:ku-javadoc.openOnboarding)"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.106.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.1"
    },
    "dependencies": {
        "node-fetch": "^3.3.2",
        "vsce": "^2.15.0"
    }
}
